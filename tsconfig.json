{
	// https://nuxt.com/docs/guide/concepts/typescript
	"extends": "./.nuxt/tsconfig.json",
	"compilerOptions": {
		"target": "ES2018",
		"module": "ESNext",
		"baseUrl": ".",
		"paths": {
			"~/*": ["./*"],
			"@/*": ["./*"]
		},
		"types": ["vite/client"]
	},
	"include": [
		"nuxt.config.ts",
		".nuxt/types/*.ts",
		"components/**/*.vue",
		"layouts/**/*.vue",
		"pages/**/*.vue",
		"plugins/**/*.ts",
		"stores/**/*.ts",
		"middleware/**/*.ts",
		"assets/**/*.ts"
	],
	"exclude": ["../dist", "../.output"]
}
